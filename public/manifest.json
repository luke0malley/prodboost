{
  "manifest_version": 3,
  "name": "Productive",
  "version": "0.5.0",
  "description": "Be more productive!",
  "action": {
    "default_title": "Productive",
    "default_popup": "index.html"
  },
  "permissions": ["storage", "tabs", "notifications", "idle"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
